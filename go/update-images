#!/bin/sh

for v in 1.20 1.21; do
    docker build . --build-arg GO_VERSION=$v --build-arg GODOC_VERSION=v0.24.0 -t robtimus/go-toolset:$v && docker push robtimus/go-toolset:$v
done
for v in 1.22 1.23 1.24; do
    docker build . --build-arg GO_VERSION=$v -t robtimus/go-toolset:$v && docker push robtimus/go-toolset:$v
done
docker tag robtimus/go-toolset:1.24 robtimus/go-toolset && docker push robtimus/go-toolset
